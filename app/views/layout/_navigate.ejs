<div id="nav">
  <ul>
    <% if(user){ %>
      <li class="first avatar">
        <span class="label"><%= user.name %></span>
      </li>
      <li>
        <a href="#" data-emit="chat#join">Join</a>
      </li>
      <li>
        <a href="#" data-local="chat#create_channel">Make</a>
      </li>
      <% if(channel){ %>
        <li class="last">
          <a href="#" data-emit="chat#unsubscribe" data-data="<%= channel.name %>">Leave</a>
        </li>
      <% }else{ %>
        <li class="last">
          <a href="#" data-emit="user#logout">Sign out</a>
        </li>
      <% } %>
    <% }else{ %>
      <li class="first active">
        <a href="#" data-local="user#login">Sign in</a>
      </li>
      <li class="last">
        <a href="#" data-local="user#registration">Sign up</a>
      </li>
    <% } %>
  </ul>
  <br class="clear" />
</div>
